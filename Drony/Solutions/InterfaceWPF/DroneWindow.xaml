<Window x:Class="InterfaceWPF.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un drone" Height="152" Width="410">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">
            <Label Content="Nom du Drone" Height="28" HorizontalAlignment="Left"  Name="lbNomDrone" VerticalAlignment="Top" Width="167" />
            <TextBox Height="23" Name="tbNomDrone" Width="120" />
            <Label Content="Poids" Height="28" Name="lbPoids" Width="167" />
            <TextBox Height="23" Name="tbPoids" Width="120" />
            <Label Content="kg" Height="28" Width="39" />
        </WrapPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            <Button Content="Ajouter"  Name="btnAjouter" Width="75" Click="btnAjouter_Click" Margin="15"  />
            <Button Content="Annuler"  Name="btnAnnuler" Width="75" Click="btnAnnuler_Click" Margin="15"/>
        </WrapPanel>
    </DockPanel>
</Window>
